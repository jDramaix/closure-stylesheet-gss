@def myblack #000;
@def mywhite #fff;

.className1 {
    display: block;
    width: 100px;
    height: 50px;
}

@if (true) {
    .className1 {
        background-color: myblack;
        color: mywhite;
    }
} @else {
    .className1 {
        color: mywhite;
        background-color: myblack;
    }
}

